<el-dialog :title="title" :visible.sync="dialogFormCreateVisible" class="cn-create">
    <div class="row">
        <el-button type="info" round plain size="small" class="float-right">
            <i class="fa fa-question" aria-hidden="true"></i> Hướng dẫn
        </el-button>
        <el-button @click="clickCreateSettingProduct" 
                   type="info" round plain 
                   size="small" 
                   class="float-right"
                   :style="'color: ' + textCreateSetting + '; background-color: ' + colorCreateSetting + ';'">
            <i class="fa fa-cog" aria-hidden="true"></i> Cài đặt
        </el-button>
        <el-button type="info" round plain size="small" class="float-right">
            <i class="fa fa-upload" aria-hidden="true"></i> Tải lên
        </el-button>
        <el-button @click="clickCreateAPIProduct" 
                   type="info" round plain 
                   size="small" 
                   class="float-right"
                   :style="'color: ' + textCreateAPI + '; background-color: ' + colorCreateAPI + ';'">
            <i class="fa fa-server" aria-hidden="true"></i> Thêm API
        </el-button>
        <el-button @click="clickCreateProductSub" 
                   type="info" round plain 
                   size="small" 
                   class="float-right"
                   :style="'color: ' + textCreate + '; background-color: ' + colorCreate + ';'">
            <i class="fa fa-inbox" aria-hidden="true"></i> Thêm sản phẩm
        </el-button>
    </div>
    <div v-if="isCreate == true" v-loading="loadingForm">
        {{> product/form-create}}
    </div>
    <div v-if="isCreateAPI == true" v-loading="loadingForm">
        {{> product/form-createAPI}}
    </div>
    <div v-if="isSettingCreate == true" v-loading="loadingForm">
        {{> product/form-create-setting}}
    </div>
</el-dialog>