<el-dialog :title="title" :visible.sync="dialogFormNoteVisible" class="cn-note">
    <div class="row">
        <el-button type="info" round plain size="small" class="float-right">
            <i class="fa fa-question" aria-hidden="true"></i> Hướng dẫn
        </el-button>
        <el-button @click="clickEditSettingProduct" type="info" round plain size="small" class="float-right"
            :style="'color: ' + textEditSetting + '; background-color: ' + colorEditSetting + ';'">
            <i class="fa fa-cog" aria-hidden="true"></i> Cài đặt
        </el-button>
        <el-button @click="clickEditSettingProduct" type="info" round plain size="small" class="float-right"
            :style="'color: ' + textEditSetting + '; background-color: ' + colorEditSetting + ';'">
            <i class="fa fa-comment" aria-hidden="true"></i> Chú ý của tôi
        </el-button>
    </div>
    <el-form :label-position="labelPosition" :model="noteForm" :rules="noteValidate" ref="noteForm" label-width="120px" class="demo-noteForm">
        <el-form-item label="Tiêu đề ghi chú" prop="title">
            <el-input v-model="noteForm.title" placeholder="Vui lòng nhập tiêu đề"></el-input>
        </el-form-item>
        <el-form-item label="Nội dung ghi chú" prop="content">
            <el-input type="textarea" v-model="noteForm.content"></el-input>
        </el-form-item>
        <el-form-item label="Thời gian">
            <el-time-picker class="w-100" is-range v-model="noteForm.date" range-separator="To" start-placeholder="Start time"
                end-placeholder="End time">
            </el-time-picker>
        </el-form-item>
        <el-form-item label="Trạng thái">
            <el-radio-group v-model="noteForm.status">
                <el-radio-button v-for="item in listData.radioStatusNote" :label="item.label"></el-radio-button>
            </el-radio-group>
        </el-form-item>
        <el-form-item>
            <el-button type="primary" @click="createNoteProduct('noteForm')">Thay đổi</el-button>
            <el-button>Đóng</el-button>
        </el-form-item>
    </el-form>
</el-dialog>